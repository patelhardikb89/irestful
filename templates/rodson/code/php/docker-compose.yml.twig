version: '2'

services:
   db:
     image: mysql:5.7
     volumes:
       - db_data:/var/lib/mysql
     restart: always
     environment:
       MYSQL_ROOT_PASSWORD: root
       MYSQL_DATABASE: authenticated-crud
       MYSQL_USER: authenticated
       MYSQL_PASSWORD: docker

   authenticated-crud:
     depends_on:
       - db
     image: irestful/authenticated-crud:16.12.08
     ports:
       - "80:80"
     restart: always
     environment:
       DB_USERNAME: authenticated
       DB_PASSWORD: docker
       DB_SERVER: db
       DB_NAME: {{name.project_name|lower}}
       DB_DRIVER: mysql
       API_DOMAIN: {{domain}}
       API_PROTOCOL: http
       API_PORT: 80
volumes:
    db_data:
