version: '2'

services:
   db:
     image: mysql:5.7
     volumes:
       - db_data:/var/lib/mysql
     restart: always
     environment:
       MYSQL_ROOT_PASSWORD: root
       MYSQL_DATABASE: test_database
       MYSQL_USER: test_username
       MYSQL_PASSWORD: docker

   authenticated-crud:
     depends_on:
       - db
     image: {{name.organization_name|lower}}/{{name.project_name|lower}}:{{version}}
     ports:
       - "80:80"
     restart: always
     environment:
       DB_USERNAME: test_username
       DB_PASSWORD: docker
       DB_SERVER: db
       DB_NAME: test_database
       DB_DRIVER: mysql
       API_DOMAIN: {{domain}}
volumes:
    db_data:
