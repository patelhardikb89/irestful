{
    "name": "{{name}}",
    "type": "{{type}}",
    "homepage": "{{homepage.url}}",
    "license": "{{license}}",

    {% if authors|length > 0 %}
    "authors": [
        {%- for oneAuthor in authors -%}
            {
                "name": "{{oneAuthor.name}}",
                "email": "{{oneAuthor.email.email}}"
            }{{- loop.last ? '' : ',' -}}

        {%- endfor -%}
    ],
    {% endif %}

    "require": {
      "php": ">=7.0",
      "phpunit/phpunit": "5.6.1",
      "steve-rodrigue/irestful": "dev-master"
    },

    {% if installation %}
    "scripts": {
        "post-update-cmd": [
            "{{installation.namespace.all_escaped}}::install"
        ]
    },
    {% endif %}
    "autoload": {
        "psr-0": { "{{base_namespace}}": "{{base_folder}}" }
    }
}
